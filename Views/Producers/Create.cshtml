@model Producer

@{
    ViewData["Title"] = "Add a new Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new Producer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicUrlpreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePicUrl" class="control-label"></label>
                        <input asp-for="ProfilePicUrl" class="form-control" />
                        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('ProfilePicUrlpreview');
            output.src = $("#ProfilePicUrl").val();
        })
        $("#ProfilePicUrl").on("change", function () {
            var output = document.getElementById('ProfilePicUrlpreview');
            output.src=$(this).val();
        })
    </script>
}