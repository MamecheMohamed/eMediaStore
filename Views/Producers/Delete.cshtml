@model Producer

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img id="ProfilePicUrlpreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePicUrl" class="control-label"></label>
                        <input asp-for="ProfilePicUrl" class="form-control" readonly/>
                        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" readonly />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-outline-danger float-end"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicUrlpreview');
            output.src = $("#ProfilePicUrl").val();
        })
    </script>
}